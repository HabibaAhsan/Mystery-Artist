<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="50sp"
        android:layout_height="40sp"
        android:layout_marginStart="140sp"
        android:layout_marginTop="10sp"
        app:srcCompat="@drawable/crystal" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="40sp"
        app:srcCompat="@drawable/house" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="240sp"
        android:layout_height="60sp"
        android:layout_marginBottom="80sp"
        android:background="@drawable/sq"
        android:fontFamily="@font/bubblegum_sans"
        android:paddingLeft="4sp"
        android:paddingTop="16sp"
        android:text="Mystery   Atrist"
        android:textAlignment="center"
        android:textColor="#4B2452"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="130sp"
            android:layout_height="40sp"
            android:layout_marginTop="2sp"
            android:background="@drawable/sq"
            android:fontFamily="@font/bubblegum_sans"
            android:paddingLeft="4sp"
            android:paddingTop="11sp"
            android:text="Create Game: "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/createGameBtn"
            android:layout_width="90sp"
            android:layout_height="90sp"
            android:layout_marginEnd="130sp"
            android:background="#00FFFFFF"
            android:foreground="@drawable/pos"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="120sp"
            android:layout_height="40sp"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/sq"
            android:fontFamily="@font/bubblegum_sans"
            android:paddingLeft="4sp"
            android:paddingTop="11sp"
            android:text="Join Game:  "
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <Button
            android:id="@+id/joinGameBtn"
            android:layout_width="95sp"
            android:layout_height="95sp"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="130sp"
            android:background="#00FFFFFF"
            android:foreground="@drawable/video"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</LinearLayout>
